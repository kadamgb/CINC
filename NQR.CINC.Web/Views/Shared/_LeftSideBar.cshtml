<script type="text/javascript">
    $(document).ready(function () {
        // set active link
        $('#leftmenu li').each(function () {
            var id = '@ViewData["activelinkId"].ToString()';
            if ($(this).attr('id') == id) {
                $('#' + id + ' li').addClass('active');
                $(this).removeClass('arrow');
                $(this).addClass('open');
                $(this).addClass('active');
            }
        });
    });
</script>

